<html>
<head>
	<title>My Favorite Desserts</title>
	<link rel="stylesheet" type="text/css" href="application.css">
</head>
<body>
	<h1>
		Favorite Dessert List
	</h1>

	<ul>
		<% @desserts.each do |dessert| %>
		<li><a href="/desserts/<%= dessert.id %>"> <%= dessert.description %></a></li>
		<% end %>
	</ul>
	<form action="/desserts" method="post">
		<input type="button" value="Add" onclick="location.href='/add-dessert'">

	</form>
</body>
</html>
